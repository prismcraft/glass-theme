{
  "name": "@prismcraft/glass-angular",
  "version": "0.1.0",
  "description": "Angular adapter for @prismcraft/glass-core (directives + service).",
  "repository": {
    "type": "git",
    "url": "https://github.com/prismcraft/glass-theme.git",
    "directory": "packages/glass-angular"
  },
  "bugs": {
    "url": "https://github.com/prismcraft/glass-theme/issues"
  },
  "homepage": "https://github.com/prismcraft/glass-theme/tree/main/packages/glass-angular#readme",
  "license": "MIT",
  "type": "module",
  "files": ["dist", "README.md"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "lint": "node -e \"console.log('lint: TODO (add eslint config if desired)')\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepack": "pnpm run build"
  },
  "peerDependencies": {
    "@angular/common": ">=16",
    "@angular/core": ">=16"
  },
  "dependencies": {
    "@prismcraft/glass-core": "^0.1.0"
  },
  "devDependencies": {
    "tsup": "^8.3.5",
    "typescript": "^5.7.3"
  }
}


